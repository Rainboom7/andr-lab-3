<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idLastNameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="Фамилия"
        android:textSize="28sp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_below="@id/idLastNameHeader"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/idFirstNameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/editText1"
        android:text="Имя"
        android:textSize="28sp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/idFirstNameHeader"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/idMiddleNameHeader"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/editText2"
        android:text="Отчество"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
     />

    <EditText
        android:id="@+id/editText3"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/idMiddleNameHeader" />

    <Button
        android:id="@+id/button1"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/editText3"
        android:text="подтвердить"
        android:layout_marginTop="20dp" />



</RelativeLayout>